function set_alias() {
	local cmd=$1
	local tool=$2
	shift 2

	if [ -x "$(command -v $tool)" ]; then
		alias $cmd="$tool $*"
	fi
}

if [[ -x "$(command -v exa)" ]]; then
  alias ls='exa --color=auto'
  alias ll='exa -alhF'
  alias la='exa -a'
  alias l='exa -F'
else
  alias ll='ls -al'
  alias la='ls -a'
  alias l='ls -F'
fi

alias c='cd'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias grep='grep -i --color=auto'
alias tree='tree -C'
alias less='less -R'
alias watch='watch -c'

